<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #4b0082, #8b00ff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopproject.StartController">

    <VBox alignment="CENTER" layoutX="50.0" layoutY="121.0" prefHeight="250.0" prefWidth="555.0" spacing="20" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="121.0">
        <!-- Welcome Text -->
        <Text text="Welcome to the Movie Booking App!" textAlignment="CENTER">
            <font>
                <Font name="Arial Bold" size="32.0" />
            </font>
         <fill>
            <LinearGradient endX="1.0" endY="1.0" startX="1.0">
               <stops>
                  <Stop>
                     <color>
                        <Color green="0.5928812623023987" blue="0.8799999952316284" />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="1.0" green="1.0" blue="1.0" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </fill>
        </Text>

        <!-- Start Button -->
        <Button onAction="#start" prefHeight="41.0" prefWidth="159.0" style="-fx-background-color: yellow;" text="Start">
         <font>
            <Font name="System Bold" size="22.0" />
         </font></Button>

        <!-- Exit Button -->
        <Button onAction="#exit" prefHeight="41.0" prefWidth="161.0" style="-fx-background-color: red;" text="Exit">
         <font>
            <Font name="System Bold" size="23.0" />
         </font></Button>
    </VBox>

</AnchorPane>
