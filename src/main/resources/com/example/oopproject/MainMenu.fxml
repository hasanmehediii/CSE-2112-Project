<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopproject.MainMenuController">
    <!-- Background Image -->
    <ImageView fx:id="backgroundImage" fitHeight="600.0" fitWidth="800.0">
        <Image url="@background.jpg" />
    </ImageView>

    <!-- Profile Details Label -->
    <Label fx:id="profileDetailsLabel" layoutX="50.0" layoutY="50.0" style="-fx-font-size: 18; -fx-text-fill: white;" />

    <!-- Menu Buttons -->
    <VBox alignment="CENTER" layoutX="300.0" layoutY="200.0" spacing="20.0">
        <!-- Select Movies Button -->
        <Button fx:id="selectButton" onAction="#handleSelectMovies" prefHeight="47.0" prefWidth="161.0"
                style="-fx-background-color: linear-gradient(to bottom, #00c6ff, #0072ff); -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 0, 5);" text="Select Movies" />

        <!-- My Profile Button -->
        <Button fx:id="profileButton" onAction="#handleProfile" prefHeight="44.0" prefWidth="166.0"
                style="-fx-background-color: linear-gradient(to bottom, #ff7e5f, #ff6347); -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 0, 5);" text="My Profile" />

        <!-- Booked Button -->
        <Button fx:id="bookingButton" onAction="#handleBooked" prefHeight="46.0" prefWidth="170.0"
                style="-fx-background-color: linear-gradient(to bottom, #38ef7d, #11998e); -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 0, 5);" text="Booked" />

        <!-- LogOut Button -->
        <Button fx:id="logoutButton" onAction="#handleLogout" prefHeight="45.0" prefWidth="171.0"
                style="-fx-background-color: linear-gradient(to bottom, #ff7e5f, #ff6347); -fx-background-radius: 25; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 10, 0, 0, 5);" text="LogOut" />
    </VBox>
</AnchorPane>
